{
  "root": true,
  "env": {
    "commonjs": true,
    "es2020": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "jest",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "settings": {
    "jest": {
      "version": 26
    }
  },
  "ignorePatterns": [
    "dist/*"
  ],
  "rules": {
    "prettier/prettier": "error"
  }
}